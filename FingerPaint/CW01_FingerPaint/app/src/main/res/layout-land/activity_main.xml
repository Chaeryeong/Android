<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <view
                android:id="@+id/canvas"
                class="com.example.cw01_fingerpaint.FingerPainterView"
                android:layout_width="476dp"
                android:layout_height="match_parent" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <Button
                    android:id="@+id/Brush"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="onBrushClick"
                    android:text="Brush" />

                <Button
                    android:id="@+id/Colour"
                    android:layout_width="131dp"
                    android:layout_height="46dp"
                    android:onClick="onColourClick"
                    android:text="Colour" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="match_parent"
                    android:layout_height="23dp"
                    android:text=" => Current Info "
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="match_parent"
                    android:layout_height="29dp"
                    android:text=" Colour : " />

                <TextView
                    android:id="@+id/CurrColour"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/textView14"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_weight="1"
                    android:text=" Brush Shape : " />

                <TextView
                    android:id="@+id/CurrType"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/textView15"
                    android:layout_width="match_parent"
                    android:layout_height="29dp"
                    android:text="Brush Width : " />

                <TextView
                    android:id="@+id/CurrWidth"
                    android:layout_width="match_parent"
                    android:layout_height="6dp"
                    android:layout_weight="1" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>